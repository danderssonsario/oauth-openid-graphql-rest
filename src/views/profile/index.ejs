<div class="container py-5 h-100">
  <div class="row justify-content-center align-items-center h-100">
    <div class="col col-lg-6 mb-4 mb-lg-0">
      <div class="card mb-3 rounded" style="border-radius: .5rem;">
        <div class="row g-0 rounded shadow">
          <div class="bg-light rounded-start col-md-4 gradient-custom text-center text-dark border-top-left-radius-0 border-bottom-left-radius-0"
            style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
            <img id="profile" src='<%= avatar %>'
              alt="Avatar" class="img-fluid my-5 border border-dark" style="width: 80px;" />
            <h5><%= name %></h5>
            <i class="far fa-edit mb-5"></i>
          </div>
          <div class="col-md-8">
            <div class="card-body p-4">
              <h5>Information</h5>
              <hr class="mt-0 mb-4">
              <div class="row pt-1">
                <div class="col-6 mb-3">
                  <h6>Email</h6>
                  <p class="text-muted"><%= email %></p>
                </div>
                <div class="col-6 mb-3">
                  <h6>Username</h6>
                  <p class="text-muted"><%= username %></p>
                </div>
              </div>
              <div class="row pt-1">
                <div class="col-6 mb-3">
                  <h6>Last Activity</h6>
                  <p class="text-muted"><%= lastActivityOn %></p>
                </div>
                <div class="col-6 mb-3">
                  <h6>Gitlab ID</h6>
                  <p class="text-muted"><%= id %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
